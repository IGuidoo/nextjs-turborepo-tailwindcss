{
  "version": 2,
  "builds": [
    {
      "src": "apps/app-router/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": "apps/app-router/.next"
      }
    },
    {
      "src": "apps/pages-router/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": "apps/pages-router/.next"
      }
    }
  ],
  "routes": [
    {
      "src": "/docs/(.*)",
      "dest": "/apps/pages-router/$1"
    },
    {
      "src": "/((?!docs).*)",
      "dest": "/apps/app-router/$1"
    }
  ],
  "env": {
    "PNPM_VERSION": "8.0.0"
  }
}